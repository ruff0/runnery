<% provide(:title, 'Edit Register') %>
<h3 style="font-family: Courier New; font-style:italic; margin-left:0; margin-top:20px; padding:0;">Edit Register</h3>

<div style="width:160px;">
<%= form_for(@user) do |f| %>
   
    <%= render 'shared/error_messages', object: f.object %>
  	
    <%= f.label :user_type %>
    <%= f.select :user_type, [["Driver", true],["Restaurant", false]] %>

    <br>
    <br>

  </div>

  <div class="span4" style="margin: 0 0 0 0px;">
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :phone %>
    <%= f.text_field :phone, placeholder: "8885551234" %>

    <% if signed_in? && driver? %>
 
    <%= f.label :address, "Restaurant Address", style: "display:none" %>
    <%= f.text_area :address, placeholder: "Full restaurant address", style: "display:none" %>

    <% elsif signed_in? && !driver? %>

    <%= f.label :address, "Restaurant Address" %>
    <%= f.text_area :address, placeholder: "Full restaurant address" %>

    <% end %>
 
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: "6 char min" %>

    <%= f.label :password_confirmation, "Confirm password" %>
    <%= f.password_field :password_confirmation %>

  <br>
  <br>
  
    <%= f.submit "Edit!", class: "btn-large btn-inverse", rel: :external  %>

	<br>
  <br>

  </div>
  
<% end %>


