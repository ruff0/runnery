<% provide(:title, 'Sign up') %>
<div class="container">

<h2>Register!</h2>

  <div class="span">
    <%= form_for(@user) do |f| %>

  	
    <%= f.label :user_type, "Please choose:" %>
    <%= f.select :user_type, [["Driver", true],["Restaurant", false]] %>
<div class="span4">
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :phone %>
    <%= f.text_field :phone, placeholder: "8885551234" %>
 
    <%= f.label :address, "Restaurant address" %>
    <%= f.text_area :address, placeholder: "Full restaurant address--not required for drivers." %>
 
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: "6 char min" %>

    <%= f.label :password_confirmation, "Confirm password" %>
    <%= f.password_field :password_confirmation %>


  </div>

  
    <%= f.submit "Start!", class: "btn-large btn-inverse" %>

</div>

<% end %>

</div>

