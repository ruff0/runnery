<!DOCTYPE html>

<html>
	<head>
  		<title><%= full_title(yield(:title)) %></title>

  		<meta name="viewport" content="width=device-width, initial-scale=1">

  	  	<%= stylesheet_link_tag "application" %>

  	  	<%= stylesheet_link_tag 'mobile' if mobile_device? %>

  	  	<%= javascript_include_tag "application" %>

  	  	<script src="//maps.google.com/maps/api/js?v=3.14&amp;sensor=false&amp;libraries=geometry" type="text/javascript">
  	  	</script>

		<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.1.2/src/markerclusterer_packed.js" type="text/javascript">
		</script>


 	  	<%= csrf_meta_tags %>

  	  	<%= render 'layouts/shim' %>

	</head>


	<body>
		<div style="text-shadow:none;font-size:13px;" data-role="page">

		<%= render 'layouts/header' %>

	<div class="wrapper">
		<div class="container">

			<br>
			<br>

			<%= link_to image_tag("delivery.png", alt: "Delivery"), root_path, id: "image" %>

			<% if !signed_in? %>	

				<h1>Welcome !!!</h1>

		 	<% else %>

				<h1>Hello, <%= current_user.name %> !!!</h1>

		 	<% end %>
			
		</div> 

			<div class = "container">

			<% flash.each do |key, value| %>

        		<%= content_tag(:div, value, 
        			class: "alert alert-#{key}") %>
	
			<%end%>
				
				<% if signed_in? %>

				<h3>Deliveries:</h3>

        		<%= render 'shared/stats' %>
    
      			<br>
				
      		<%end%>

			<%= yield %>

			</div>
		</div>

		<br>
		<br>

		<%= render 'layouts/footer' %>

		<%= debug(params) if Rails.env.development? %>

		</div>
	
	</body>
	
</html>