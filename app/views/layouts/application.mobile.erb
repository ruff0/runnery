<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html>

  <head>

    <title><%= full_title(yield(:title)) %></title>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    

   <%= stylesheet_link_tag    "application" %>
   <%= javascript_include_tag "application" %>

    <script src="//maps.google.com/maps/api/js?v=3.14&amp;sensor=false&amp;libraries=geometry" type="text/javascript">
        </script>

    <script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.1.2/src/markerclusterer_packed.js" type="text/javascript">
    </script>

      
      <%= csrf_meta_tags %>

      <%= yield(:head) %>

  </head>
  <body style="position:absolute; width:100%; height:100%;">
		<div style="text-shadow:none;font-size:13px;" data-role="page">

		<div data-role="header">
		<%= render 'layouts/header' %>
		
		<br>
		<br>
		</div>
		
	
			<%= yield %>

			<% flash.each do |key, value| %>

        		<%= content_tag(:div, value, 
        			class: "alert alert-#{key}")%>
	
			<%end%>
				
				<% if signed_in? %>
					<% if !driver? %>
			
        			 <li class="dropdown">
           				 <a href="#" class="dropdown-toggle" data-toggle="dropdown">
             				 <h4 style="margin:10px 10px 10px 10px; background: rgba(172,228,252,.9);box-shadow: 10px 10px 5px #888888;
             				 margin-left:90px;margin-top:30px; width:150px;position:relative; z-index:1; color:black;">Post Delivery:</h4>
           				 </a>
				            <ul class="dropdown-menu" style="left:100px;width:350px;background: rgba(172,228,252,.9);box-shadow: 10px 10px 5px #888888">
				              <br><li style="margin:10px 10px 10px 10px"><%= render 'shared/order_form'%></li>
				            </ul>
			         </li>
        			
        			<% else %>
        			
        			
<script type="text/javascript">

   $(document).ready(function(){ navigator.geolocation.getCurrentPosition(

        function(pos){
          $("#latitude").val(pos.coords.latitude);
          $("#longitude").val(pos.coords.longitude);

                           
  });
 });   

</script>

       <%= form_for Location.new do |f| %>

        
          <%= f.hidden_field :lat, :id => "latitude" %>
       
          <%= f.hidden_field :lng, :id => "longitude" %>

          <%= f.submit "Locate", 
                class: "btn btn-info", style: "position:relative;z-index:1;margin-left:90px;margin-top:25px", :id => "autolocate", :rel => "external" %>
                    
        <% end %>
        			
        			
      					<%end%>
      				<%end%>

	<div date-role="footer">
		<%= render 'layouts/footer' %>
	</div>
	
		<%= debug(params) if Rails.env.development? %>

	</div>
	
	</body>
</html>