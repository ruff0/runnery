<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html>

  <head>

    <title><%= full_title(yield(:title)) %></title>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    

   <%= stylesheet_link_tag    "application" %>
   <%= javascript_include_tag "application" %>

    <script src="//maps.google.com/maps/api/js?v=3.14&amp;sensor=false&amp;libraries=geometry" type="text/javascript">
        </script>

    <script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.1.2/src/markerclusterer_packed.js" type="text/javascript">
    </script>

      
      <%= csrf_meta_tags %>

      <%= yield(:head) %>

  </head>
  <body>

    <div style="text-shadow:none; font-size:13px;" data-role="page" data-url="<%= request.path %>">

     <div data-role="header">
    <%= render 'layouts/header' %>
  </div>

  <br>
  <br>

       <div data-role="content">
    <div class="float-left" style="width:380px;">

    <% flash.each do |key, value| %>

            <%= content_tag(:div, value, 
              class: "alert alert-#{key}") %>

    <% end %>

  </div>    
     
      <%= yield %>
      </div>

      <br>
      <br>
      <br>
      <br>
      <br>

    <div date-role="footer">
    <%= render 'layouts/footer' %>
  </div>
  
    <%= debug(params) if Rails.env.development? %>

  </div>

  </body>
</html>