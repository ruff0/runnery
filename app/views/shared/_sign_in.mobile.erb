    <br>

  	<%= f.submit "Sign in!", class: "btn btn-large btn-inverse", rel: :external %>

		<% end %>

    <%= link_to "Register!", signup_path, class: "btn", rel: :external, style: "color:black" %>

	</div>
 </div>