<%= render "shared/javascript_headers" %>

<% if signed_in? && driver? %>
<script type="text/javascript">

   $(document).ready(function(){ navigator.geolocation.getCurrentPosition(

        function(pos){
          $("#latitude").val(pos.coords.latitude);
          $("#longitude").val(pos.coords.longitude);
                   
  });
 });   

</script>
<% end %>

<% provide(:title, 'Home') %>

<% if signed_in? %>
  <% if driver? %>

    <div class="span4" style="width:100%; margin:0 0 0 0px">

      <h3 class="span2" style=" margin-top:15px;">Waiting:</h1>

      <column class="span1 pull-right" style="margin-top:none; margin-right:15px;">

       <%= form_for @location do |f| %>

        
          <%= f.hidden_field :lat, :id => "latitude" %>
       
          <%= f.hidden_field :lng, :id => "longitude" %>

          <%= f.submit "Locate", 
                class: "btn btn-info" %>
                    
        <% end %>

      </column>

      <br>
      <br>
      <br>
      <br>
        
        <%= render 'shared/feed' %>

    </div>
    <% else %>

    <div style="margin: 0 0 0 0px; width:100%">

      <h3 style="margin-left:20px;">Post Delivery:</h3>

      <%= render 'shared/order_form'%>

      <h3 style="margin-left:20px;">Waiting:</h3>
      <br>
      <%= render 'shared/feed' %>
         
    </div>

    <% end %>
    <% else %>

	   <%= render 'shared/sign_in' %>

	<% end %>

