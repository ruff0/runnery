
<h2>Listing orders</h2>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Phone</th>
      <th>Surcharge</th>
      <th>User</th>
      <th>Pay type</th>
      <th>Taken</th>
      <th>Receipt</th>
      <th>Done</th>
      <th>Redeemed</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.address %></td>
        <td><%= order.phone %></td>
        <td><%= order.surcharge %></td>
        <td><%= order.user_id %></td>
        <td><%= order.pay_type %></td>
        <td><%= order.taken %></td>
        <td><%= order.receipt %></td>
        <td><%= order.done %></td>
        <td><%= order.redeemed %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

